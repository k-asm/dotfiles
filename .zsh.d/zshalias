if type trash > /dev/null 2>&1; then
  alias rm="trash"
fi
if type rmtrash > /dev/null 2>&1; then
  alias rm="rmtrash"
fi

alias gst="git st"
alias gdf="git df"
alias gdc="git dc"
alias glg="git lg"
alias ggr="git gr"
alias gps="git ps"
alias gpl="git pl"

alias pd="perldoc -MPod::Perldoc::Cache -w parser=Pod::Text::Color::Delight"
alias ll="la"

alias vi="nvim"
alias vim="nvim"

alias ssh="TERM=xterm ssh"
